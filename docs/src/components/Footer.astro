---
import { ui } from '../i18n/ui';

interface Props {
  lang?: string;
}

const { lang = 'en' } = Astro.props;
const t = ui[lang as keyof typeof ui] || ui.en;
---

<footer class="relative mt-32 border-t border-primary/10">
  <!-- Background Glow -->
  <div class="absolute inset-0 bg-gradient-to-t from-primary/5 to-transparent pointer-events-none"></div>
  
  <div class="relative container mx-auto px-6 py-16">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-12">
      <!-- Brand Column -->
      <div class="md:col-span-2">
        <div class="flex items-center gap-3 mb-4">
          <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-primary to-accent flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
            </svg>
          </div>
          <span class="text-xl font-bold">
            ORION<span class="text-primary">HEALTH</span>
          </span>
        </div>
        <p class="text-sm text-text-muted leading-relaxed max-w-md">
          Privacy-first health assistant powered by local AI. Your data never leaves your device.
        </p>
        
        <!-- Social Links -->
        <div class="flex gap-4 mt-6">
          <a 
            href="https://github.com/iberi22/local-llm.OrionHealth" 
            class="w-10 h-10 rounded-full border border-primary/30 flex items-center justify-center hover:bg-primary/10 hover:border-primary transition-all duration-500"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h4 class="text-xs font-bold uppercase tracking-[0.3em] opacity-40 mb-4">Links</h4>
        <ul class="space-y-3">
          <li><a href="#features" class="text-sm text-text-muted hover:text-primary transition-colors duration-500">Features</a></li>
          <li><a href="#privacy" class="text-sm text-text-muted hover:text-primary transition-colors duration-500">Privacy</a></li>
          <li><a href="#download" class="text-sm text-text-muted hover:text-primary transition-colors duration-500">Download</a></li>
          <li><a href="https://github.com/iberi22/local-llm.OrionHealth" class="text-sm text-text-muted hover:text-primary transition-colors duration-500" target="_blank">GitHub</a></li>
        </ul>
      </div>
      
      <!-- Legal -->
      <div>
        <h4 class="text-xs font-bold uppercase tracking-[0.3em] opacity-40 mb-4">Legal</h4>
        <ul class="space-y-3">
          <li><a href="/privacy" class="text-sm text-text-muted hover:text-primary transition-colors duration-500">Privacy Policy</a></li>
          <li><a href="/contribute" class="text-sm text-text-muted hover:text-primary transition-colors duration-500">Contribute</a></li>
          <li>
            <a href="https://www.gnu.org/licenses/agpl-3.0" class="text-sm text-text-muted hover:text-primary transition-colors duration-500" target="_blank">
              AGPL-3.0 License
            </a>
          </li>
        </ul>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="mt-16 pt-8 border-t border-primary/10">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-xs text-text-dark uppercase tracking-wider">
          © 2025 OrionHealth. Open Source Health Platform.
        </p>
        <div class="flex items-center gap-2 text-xs text-text-dark">
          <span class="uppercase tracking-wider">Built with</span>
          <span class="text-primary">♥</span>
          <span class="uppercase tracking-wider">for Privacy</span>
        </div>
      </div>
    </div>
  </div>
</footer>
