---
interface Props {
  icon: string;
  title: string;
  description: string;
  delay?: number;
}

const { icon, title, description, delay = 0 } = Astro.props;
---

<div 
  class="flashlight-card glass rounded-2xl p-8 hover:scale-[1.01] transition-transform duration-500 animate-fade-in-up"
  style={`animation-delay: ${delay}s; opacity: 0;`}
>
  <!-- Icon with Medical Gradient -->
  <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-primary to-accent flex items-center justify-center mb-6 shadow-lg shadow-primary/20">
    <span class="text-3xl">{icon}</span>
  </div>
  
  <!-- Title -->
  <h3 class="text-xl font-bold tracking-tight mb-3 text-text">
    {title}
  </h3>
  
  <!-- Description -->
  <p class="text-sm font-light leading-relaxed text-text-muted">
    {description}
  </p>
  
  <!-- Decorative Line -->
  <div class="mt-6 h-1 w-12 bg-gradient-to-r from-primary to-accent rounded-full"></div>
</div>

<style>
  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
      filter: blur(0);
    }
  }
</style>
