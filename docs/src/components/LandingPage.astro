---
import Header from './Header.astro';
import Footer from './Footer.astro';
import FeatureCard from './FeatureCard.astro';
import DonationSection from './DonationSection.astro';
import ScreenshotsGallery from './ScreenshotsGallery.astro';
import { ui } from '../i18n/ui';

interface Props {
  lang?: string;
}

const { lang = 'en' } = Astro.props;
const t = ui[lang as keyof typeof ui] || ui.en;
---

<Header lang={lang} />

<main class="pt-16 md:pt-20 safe-area-top">
  <!-- Hero Section - Mobile First -->
  <section class="relative min-h-[90vh] md:min-h-screen flex items-center justify-center overflow-hidden py-12 md:py-20 px-4">
    <!-- Hero Content -->
    <div class="relative z-10 container-custom">
      <div class="max-w-5xl mx-auto text-center">
        <!-- Trust Badge -->
        <div class="mb-6 md:mb-8 animate-fade-in-up" style="opacity: 0;">
          <span class="trust-badge inline-flex items-center gap-2" style="display: inline-flex; align-items: center; gap: 0.5rem;">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20" style="width: 1rem; height: 1rem; max-width: 1rem; max-height: 1rem;">
              <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            Privacy-First ‚Ä¢ Open Source ‚Ä¢ AGPL-3.0
          </span>
        </div>

        <!-- Main Heading - Responsive -->
        <h1 class="hero-title font-bold tracking-tighter uppercase mb-6 md:mb-8 animate-fade-in-up stagger-1" style="opacity: 0;">
          YOUR HEALTH,
          <br />
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-accent via-secondary to-accent-light">
            YOUR DATA
          </span>
        </h1>

        <!-- Subheading - Responsive -->
        <p class="text-base sm:text-lg md:text-xl lg:text-2xl text-bone-dark max-w-2xl mx-auto leading-relaxed mb-8 md:mb-12 animate-fade-in-up stagger-2 px-4" style="opacity: 0;">
          Local-first health records powered by on-device AI.
          <span class="text-accent font-semibold">Zero cloud dependency.</span>
          <span class="hidden sm:inline">Complete privacy.</span>
        </p>

        <!-- CTA Buttons - Stack on Mobile -->
        <div class="flex flex-col sm:flex-row items-center justify-center gap-3 sm:gap-4 animate-fade-in-up stagger-3 px-4" style="opacity: 0;">
          <a
            href="#download"
            class="btn-primary w-full sm:w-auto px-6 sm:px-8 py-3 sm:py-4 text-xs sm:text-sm text-center"
          >
            Download for Android
          </a>
          <a
            href="https://github.com/iberi22/OrionHealth"
            target="_blank"
            rel="noopener noreferrer"
            class="btn-secondary w-full sm:w-auto px-6 sm:px-8 py-3 sm:py-4 text-xs sm:text-sm text-center flex items-center justify-center gap-2"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" style="width: 1rem; height: 1rem; max-width: 1rem; max-height: 1rem;">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            View on GitHub
          </a>
        </div>

        <!-- Trust Stats - Responsive Grid -->
        <div class="grid grid-cols-3 gap-4 sm:gap-8 max-w-xl mx-auto mt-12 md:mt-20 animate-fade-in-up stagger-4 px-4" style="opacity: 0;">
          <div class="text-center">
            <div class="text-2xl sm:text-3xl md:text-4xl font-bold text-accent mb-1 sm:mb-2">100%</div>
            <div class="text-[10px] sm:text-xs uppercase tracking-wider text-bone-dark opacity-60">Private</div>
          </div>
          <div class="text-center">
            <div class="text-2xl sm:text-3xl md:text-4xl font-bold text-accent mb-1 sm:mb-2">0</div>
            <div class="text-[10px] sm:text-xs uppercase tracking-wider text-bone-dark opacity-60">Cloud Storage</div>
          </div>
          <div class="text-center">
            <div class="text-2xl sm:text-3xl md:text-4xl font-bold text-accent mb-1 sm:mb-2">‚àû</div>
            <div class="text-[10px] sm:text-xs uppercase tracking-wider text-bone-dark opacity-60">Your Data</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator - Hidden on Mobile -->
    <div class="hidden md:block absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 1.5rem; height: 1.5rem; max-width: 1.5rem; max-height: 1.5rem; color: #10B981;">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </div>
  </section>

  <!-- Features Section - Responsive -->
  <section id="features" class="relative py-16 md:py-32 px-4">
    <div class="container-custom">
      <!-- Section Header -->
      <div class="text-center mb-10 md:mb-16" data-animate>
        <span class="text-[10px] sm:text-xs font-bold uppercase tracking-[0.2em] sm:tracking-[0.3em] text-bone-dark opacity-40 mb-3 sm:mb-4 block">
          Core Features
        </span>
        <h2 class="section-title font-bold tracking-tighter uppercase">
          MEDICAL GRADE <span class="text-accent">SECURITY</span>
        </h2>
      </div>

      <!-- Features Grid - Responsive -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 md:gap-6">
        <FeatureCard
          icon="üîí"
          title="100% Private"
          description="Your data never leaves your device. Local databases and on-device AI models ensure complete privacy."
          delay={0}
        />
        <FeatureCard
          icon="üß†"
          title="AI-Powered"
          description="Chat with your health records using integrated local LLM. Get insights without cloud processing."
          delay={0.1}
        />
        <FeatureCard
          icon="üìä"
          title="Comprehensive"
          description="Manage medical reports, lab results, medications, and vitals in one secure place."
          delay={0.2}
        />
        <FeatureCard
          icon="üîì"
          title="Open Source"
          description="AGPL-3.0 licensed. Full transparency. Audit the code yourself. Community-driven development."
          delay={0.3}
        />
      </div>
    </div>
  </section>

  <!-- Screenshots Gallery -->
  <ScreenshotsGallery />

  <!-- Privacy Section - Responsive -->
  <section id="privacy" class="relative py-16 md:py-32 px-4">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <!-- Section Header -->
        <div class="text-center mb-10 md:mb-16" data-animate>
          <span class="text-[10px] sm:text-xs font-bold uppercase tracking-[0.2em] sm:tracking-[0.3em] text-bone-dark opacity-40 mb-3 sm:mb-4 block">
            Privacy Commitment
          </span>
          <h2 class="section-title font-bold tracking-tighter uppercase mb-4 md:mb-8">
            YOUR DATA IS <span class="text-accent">SACRED</span>
          </h2>
        </div>

        <!-- Privacy Cards - Responsive -->
        <div class="space-y-4 md:space-y-6">
          <div class="flashlight-card glass rounded-xl md:rounded-2xl p-6 md:p-8" data-animate>
            <h3 class="text-lg sm:text-xl md:text-2xl font-bold mb-2 md:mb-4 flex items-center gap-2 md:gap-3">
              <span class="text-accent text-base sm:text-lg">‚úì</span> No Cloud Storage
            </h3>
            <p class="text-sm md:text-base text-bone-dark leading-relaxed opacity-80">
              All your health data is stored locally on your device using Isar database.
              We don't have servers to hack because we don't have servers.
            </p>
          </div>

          <div class="flashlight-card glass rounded-xl md:rounded-2xl p-6 md:p-8" data-animate>
            <h3 class="text-lg sm:text-xl md:text-2xl font-bold mb-2 md:mb-4 flex items-center gap-2 md:gap-3">
              <span class="text-accent text-base sm:text-lg">‚úì</span> Local AI Processing
            </h3>
            <p class="text-sm md:text-base text-bone-dark leading-relaxed opacity-80">
              All AI features run on-device using ONNX Runtime. Your conversations with your health data
              stay private. No API calls, no data transmission.
            </p>
          </div>

          <div class="flashlight-card glass rounded-xl md:rounded-2xl p-6 md:p-8" data-animate>
            <h3 class="text-lg sm:text-xl md:text-2xl font-bold mb-2 md:mb-4 flex items-center gap-2 md:gap-3">
              <span class="text-accent text-base sm:text-lg">‚úì</span> Open Source Transparency
            </h3>
            <p class="text-sm md:text-base text-bone-dark leading-relaxed opacity-80">
              Every line of code is public under AGPL-3.0 license. Security researchers and developers
              can audit our privacy claims. No hidden telemetry.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Support Section - NEW -->
  <section id="support" class="relative py-16 md:py-32 px-4">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <!-- Section Header -->
        <div class="text-center mb-10 md:mb-16" data-animate>
          <span class="text-[10px] sm:text-xs font-bold uppercase tracking-[0.2em] sm:tracking-[0.3em] text-bone-dark opacity-40 mb-3 sm:mb-4 block">
            Community Support
          </span>
          <h2 class="section-title font-bold tracking-tighter uppercase mb-4 md:mb-8">
            GET <span class="text-accent">HELP</span>
          </h2>
          <p class="text-sm md:text-base text-bone-dark max-w-2xl mx-auto leading-relaxed opacity-80">
            Have feedback, found a bug, or want to request a feature? Our Telegram bot makes it easy to submit tickets that become GitHub issues.
          </p>
        </div>

        <!-- Support Options Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6">
