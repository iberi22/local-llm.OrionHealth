---
import Header from './Header.astro';
import Footer from './Footer.astro';
import FeatureCard from './FeatureCard.astro';
import DonationSection from './DonationSection.astro';
import { ui } from '../i18n/ui';

interface Props {
  lang?: string;
}

const { lang = 'en' } = Astro.props;
const t = ui[lang as keyof typeof ui] || ui.en;
---

<Header lang={lang} />

<main class="pt-24">
  <!-- Hero Section with 3D Card Stack -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden py-20">
    <!-- Hero Content -->
    <div class="relative z-10 container mx-auto px-6">
      <div class="max-w-5xl mx-auto text-center">
        <!-- Label -->
        <div class="mb-8 animate-fade-in-up" style="opacity: 0;">
          <span class="inline-block px-4 py-2 rounded-full border border-primary/30 text-xs uppercase tracking-wider text-primary">
            Privacy-First Health Assistant
          </span>
        </div>
        
        <!-- Main Heading -->
        <h1 class="text-6xl md:text-8xl font-bold tracking-tighter uppercase mb-8 animate-fade-in-up stagger-1" style="opacity: 0;">
          YOUR HEALTH,
          <br />
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary via-accent to-secondary">
            YOUR DATA
          </span>
        </h1>
        
        <!-- Subheading -->
        <p class="text-xl md:text-2xl text-text-muted max-w-3xl mx-auto leading-relaxed mb-12 animate-fade-in-up stagger-2" style="opacity: 0;">
          Local-first health records powered by on-device AI. 
          <span class="text-primary">Zero cloud dependency.</span>
          Complete privacy.
        </p>
        
        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4 animate-fade-in-up stagger-3" style="opacity: 0;">
          <a 
            href="#download" 
            class="px-8 py-4 rounded-full bg-gradient-to-r from-primary to-accent text-white text-sm uppercase font-bold tracking-wider hover:scale-[1.02] hover:shadow-2xl hover:shadow-primary/30 transition-all duration-500"
          >
            Download for Android
          </a>
          <a 
            href="https://github.com/iberi22/local-llm.OrionHealth" 
            target="_blank"
            rel="noopener noreferrer"
            class="px-8 py-4 rounded-full border border-text/20 text-text hover:bg-text/5 hover:border-primary/50 text-sm uppercase font-bold tracking-wider transition-all duration-500"
          >
            View on GitHub
          </a>
        </div>
        
        <!-- Stats -->
        <div class="grid grid-cols-3 gap-8 max-w-2xl mx-auto mt-20 animate-fade-in-up stagger-4" style="opacity: 0;">
          <div class="text-center">
            <div class="text-3xl font-bold text-primary mb-2">100%</div>
            <div class="text-xs uppercase tracking-wider text-text-dark">Private</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-primary mb-2">0</div>
            <div class="text-xs uppercase tracking-wider text-text-dark">Cloud Storage</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-primary mb-2">âˆž</div>
            <div class="text-xs uppercase tracking-wider text-text-dark">Your Data</div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </div>
  </section>
  
  <!-- Features Section -->
  <section id="features" class="relative py-32">
    <div class="container mx-auto px-6">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <span class="text-xs font-bold uppercase tracking-[0.3em] opacity-40 mb-4 block">
          Core Features
        </span>
        <h2 class="text-5xl md:text-6xl font-bold tracking-tighter uppercase">
          MEDICAL GRADE <span class="text-primary">SECURITY</span>
        </h2>
      </div>
      
      <!-- Features Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <FeatureCard 
          icon="ðŸ”’" 
          title="100% Private"
          description="Your data never leaves your device. Local databases and on-device AI models ensure complete privacy."
          delay={0}
        />
        <FeatureCard 
          icon="ðŸ§ " 
          title="AI-Powered"
          description="Chat with your health records using integrated local LLM. Get insights without cloud processing."
          delay={0.1}
        />
        <FeatureCard 
          icon="ðŸ“Š" 
          title="Comprehensive"
          description="Manage medical reports, lab results, medications, and vitals in one secure place."
          delay={0.2}
        />
        <FeatureCard 
          icon="ðŸ”“" 
          title="Open Source"
          description="AGPL-3.0 licensed. Full transparency. Audit the code yourself. Community-driven development."
          delay={0.3}
        />
      </div>
    </div>
  </section>
  
  <!-- Privacy Section -->
  <section id="privacy" class="relative py-32">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto">
        <!-- Section Header -->
        <div class="text-center mb-16">
          <span class="text-xs font-bold uppercase tracking-[0.3em] opacity-40 mb-4 block">
            Privacy Commitment
          </span>
          <h2 class="text-5xl md:text-6xl font-bold tracking-tighter uppercase mb-8">
            YOUR DATA IS <span class="text-primary">SACRED</span>
          </h2>
        </div>
        
        <!-- Privacy Cards -->
        <div class="space-y-6">
          <div class="flashlight-card glass rounded-2xl p-8">
            <h3 class="text-2xl font-bold mb-4 flex items-center gap-3">
              <span class="text-primary">âœ“</span> No Cloud Storage
            </h3>
            <p class="text-text-muted leading-relaxed">
              All your health data is stored locally on your device using Isar database. 
              We don't have servers to hack because we don't have servers.
            </p>
          </div>
          
          <div class="flashlight-card glass rounded-2xl p-8">
            <h3 class="text-2xl font-bold mb-4 flex items-center gap-3">
              <span class="text-primary">âœ“</span> Local AI Processing
            </h3>
            <p class="text-text-muted leading-relaxed">
              All AI features run on-device using ONNX Runtime. Your conversations with your health data 
              stay private. No API calls, no data transmission.
            </p>
          </div>
          
          <div class="flashlight-card glass rounded-2xl p-8">
            <h3 class="text-2xl font-bold mb-4 flex items-center gap-3">
              <span class="text-primary">âœ“</span> Open Source Transparency
            </h3>
            <p class="text-text-muted leading-relaxed">
              Every line of code is public under AGPL-3.0 license. Security researchers and developers 
              can audit our privacy claims. No hidden telemetry.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Donation Section -->
  <DonationSection lang={lang} />
  
  <!-- Download Section -->
  <section id="download" class="relative py-32">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-5xl md:text-6xl font-bold tracking-tighter uppercase mb-8">
          GET <span class="text-primary">STARTED</span>
        </h2>
        <p class="text-xl text-text-muted mb-12">
          OrionHealth is currently in active development. Star us on GitHub to get notified of releases.
        </p>
        
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a 
            href="https://github.com/iberi22/local-llm.OrionHealth/releases" 
            target="_blank"
            rel="noopener noreferrer"
            class="px-8 py-4 rounded-full bg-gradient-to-r from-primary to-accent text-white text-sm uppercase font-bold tracking-wider hover:scale-[1.02] hover:shadow-2xl hover:shadow-primary/30 transition-all duration-500"
          >
            Download APK
          </a>
          <a 
            href="https://github.com/iberi22/local-llm.OrionHealth" 
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 px-8 py-4 rounded-full border border-text/20 text-text hover:bg-text/5 hover:border-primary/50 text-sm uppercase font-bold tracking-wider transition-all duration-500"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            Star on GitHub
          </a>
        </div>
      </div>
    </div>
  </section>
</main>

<Footer lang={lang} />
